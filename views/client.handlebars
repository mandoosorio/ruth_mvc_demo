<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      &#127869 Client List
    </h2>
  </div>

{{!-- this handlebars gets its info from the home-route.js file in the controllers folder --}}
{{!-- the clients const receied from html-routes GET path --}}
{{!-- clients is an array of all your saved clients so the template and html-route GET path is telling the page to render this html for every client you have --}}
  {{#each clients as |client|}}
  <div class="dish col-md-4">
    <p>
      {{client.id}}.
      {{client.client_name}}
    </p>
  </div>
  <div class="col-md-5">
    <p>
      Description:
      {{client.description}}
    </p>
  </div>
  {{/each}}


  <!-- This is the form for adding a new dish -->
  <div class="add-dish-container">
    <h1>Search for a client</h1>
    <input placeholder="search for client by name"></input>
  <button>search</button>


    <br>
    <h2>
      Add a client!
    </h2>
    <form class="new-dish-form">

      <label for="client_name">
        Client Name:
      </label>
      <br />
      <textarea id="client_name" name="client_name" rows="2" cols="30">
      {{client_name}}
    </textarea>
      <br />


      <label for="description">
        Description:
      </label>
      <br />
      <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
      <br />


      <label for="address">
        Address:
      </label>
      <br />
      <textarea id="address" name="address" rows="2" cols="30">
      {{address}}
    </textarea>
      <br />
      <br />


      <label for="phone">
        Phone:
      </label>
      <br />
      <textarea id="phone" name="phone" rows="2" cols="30">
      {{phone}}
    </textarea>
      <br />

      <label for="dob">
        DOB:
      </label>
      <br />
      <input type="text" id="dob" name="dob" rows="2" cols="30">
      {{dob}}
    </input>
      <br />


      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-client.js"></script>